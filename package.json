{
  "name": "lofi",
  "private": true,
  "packageManager": "bun@1.1.0",
  "workspaces": ["packages/*", "apps/*"],
  "scripts": {
    "build": "turbo build",
    "test": "vitest run",
    "lint": "biome check .",
    "lint:fix": "biome check . --write",
    "dev": "bun run --filter '@lofi.md/cli' dev",
    "storybook": "bun run --filter '@lofi.md/storybook' dev",
    "langium:generate": "bun run --filter '@lofi.md/language' langium:generate"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.0",
    "tailwindcss": "^4.0.0",
    "tsup": "^8.3.0",
    "turbo": "^2.7.2",
    "typescript": "^5.7.0",
    "vitest": "^2.1.0"
  },
  "trustedDependencies": [
    "@biomejs/biome",
    "@parcel/watcher",
    "@vscode/vsce-sign"
  ]
}
