{
  "$schema": "https://biomejs.dev/schemas/1.9.0/schema.json",
  "organizeImports": { "enabled": true },
  "linter": {
    "enabled": true,
    "rules": { "recommended": true }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "files": {
    "ignore": [
      "dist",
      "node_modules",
      "*.lofi",
      "storybook-static",
      ".vscode-test",
      "packages/language/src/generated"
    ]
  },
  "overrides": [
    {
      "include": ["apps/storybook/stories/LofiPreview.jsx"],
      "linter": {
        "rules": {
          "security": {
            "noDangerouslySetInnerHtml": "off"
          }
        }
      }
    }
  ]
}
