{
  "name": "@lofi/html",
  "version": "0.0.1",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./lofi.css": "./src/lofi.css",
    "./dist/lofi.css": "./dist/lofi.css"
  },
  "scripts": {
    "build:css": "bunx @tailwindcss/cli -i src/lofi.css -o dist/lofi.css --minify",
    "build:ts": "tsup src/index.ts --format esm --dts",
    "build": "bun run build:css && bun run build:ts"
  },
  "dependencies": {
    "@lofi/language": "workspace:*",
    "class-variance-authority": "^0.7.0",
    "remark": "^15.0.1",
    "remark-gfm": "^4.0.1",
    "remark-html": "^16.0.1"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.18"
  }
}
